[Unit]
Description=Varnish Cache HTTP accelerator logging daemon
After=varnish.service

[Service]
RuntimeDirectory=varnishlog
Type=forking
PIDFile=/var/run/varnishlog-<%= @instance%>.pid
ExecStart=/usr/bin/varnishlog -a -w /var/log/varnish/varnish.log -D -P /var/run/varnishlog-<%= @instance %>.pid -n <%= @instance %>
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
